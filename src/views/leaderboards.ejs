<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/styles/output.css" >
    <title>Geocaching</title>
</head>
<body class="dark:bg-gray-900">
    <%- include('navbar', { currentPage: 'leaderboards' }) %>
    <div class="container mx-auto max-w-2xl p-4 mt-16">
        <h2 class="text-4xl font-bold dark:text-white mb-4">Leaderboards</h2>

        <% locals.leaderboards.forEach(leaderboard => { %>
            <h3 class="text-2xl font-bold dark:text-gray-300 mt-8 mb-2"><%= leaderboard.title %></h3>
            <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <% leaderboard.columns.forEach(column => { %>
                                <th scope="col" class="px-6 py-3">
                                    <%= column %>
                                </th>
                            <% }) %>
                        </tr>
                    </thead>
                    <tbody>
                        <% leaderboard.entries.forEach(entry => { %>
                            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200 hover:bg-gray-50 dark:hover:bg-gray-600">
                                <% Object.keys(entry).forEach(key => { %>
                                    <td scope="row" class="text-gray-50 px-6 py-4">
                                        <%= entry[key] %>
                                    </td>
                                <% }) %>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% }) %>
    </div>

    <%- include('end-scripts') %>
</body>
</html>