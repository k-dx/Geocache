<script>
    var map;
    var markers = [];
    var currentEditListener = null;

    function initMap() {
        var initialLocation = {
            lat: 0,
            lng: 0
        };

        map = new google.maps.Map(document.getElementById('map'), {
            zoom: 1,
            center: initialLocation,
            clickableIcons: false // Enable click events on POIs
        });

        init();
    }

